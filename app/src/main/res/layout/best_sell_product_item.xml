<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <ImageView
            android:id="@+id/best_sell_productImg"
            android:layout_width="63dp"
            android:layout_height="63dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/image_ic" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/best_sell_productName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:text="TextView"
        android:fontFamily="@font/rubik_medium"
        android:textSize="14sp"
        android:textColor="@color/text_color"
        app:layout_constraintStart_toEndOf="@+id/cardView15"
        app:layout_constraintTop_toTopOf="@+id/cardView15" />

    <TextView
        android:id="@+id/best_sell_revenue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:text="TextView"
        android:fontFamily="@font/rubik_regular"
        android:textSize="12sp"
        android:textColor="@color/text_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/best_sell_productName"
        app:layout_constraintTop_toBottomOf="@+id/best_sell_productName"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/best_sell_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:fontFamily="@font/rubik_regular"
        android:text="TextView"
        android:textColor="@color/text_color"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/best_sell_revenue"
        app:layout_constraintTop_toBottomOf="@+id/best_sell_revenue" />

    <View
        android:id="@+id/view25"
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:layout_marginTop="8dp"
        android:background="@color/stroke_grey"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/best_sell_quantity"
        app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>