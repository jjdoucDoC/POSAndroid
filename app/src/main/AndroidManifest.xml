        android:label="@string/app_name"
        android:roundIcon="@drawable/pos_icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.PoSApp"
        tools:targetApi="31">
        <activity
            android:name=".activities.EditOrderActivity"
